---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import Box from "./Box.astro";
import SocialIcons from "./SocialIcons.astro";

const languages = [
  "javaScript",
  "HTML5",
  "CSS3",
  "typeScript",
  "python",
  "bash",
  "kotlin",
  "java",
  "mySQL",
  "postgreSQL",
  "mongoDB",
  "mariaDB",
];

const technologies = [
  "astro",
  "react",
  "tailwindCSS",
  "nestJS",
  "nodeJS",
  "git",
  "angular",
  "django",
  "ionic",
];

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section id="home" class="flex flex-row flex-wrap ml-4 h-[100%] md:h-[80vh]">
  <article>
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">
      {t("home.title")}
    </h2>
    <div class="flex flex-row justify-between items-center">
      <h3 class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-6">
        {t("home.job")}
      </h3>
      <section class="-mt-6">
        <SocialIcons />
      </section>
    </div>
    <p>
      {t("home.desc")}
    </p>
  </article>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-10 mx-auto mt-10">
    <Box position="center">
      <div class="grid grid-cols-4 grid-rows-3">
        {
          languages.map((lan) => (
            <div class="flex flex-col h-fit items-center gap-1 group m-5">
              <img
                src={`/svg/light/${lan}.svg`}
                alt={lan}
                title={lan.charAt(0).toUpperCase() + lan.slice(1)}
                class="h-7 w-auto object-contain transition-transform hover:scale-150 dark:hidden"
                width="30"
                height="30"
                loading="lazy"
              />
              <img
                src={`/svg/dark/${lan}.svg`}
                alt={lan}
                title={lan.charAt(0).toUpperCase() + lan.slice(1)}
                class="h-7 w-auto object-contain transition-transform hover:scale-150 hidden dark:block"
                width="30"
                height="30"
                loading="lazy"
              />
            </div>
          ))
        }
      </div>
    </Box>
    <Box position="center">
      <div class="grid grid-cols-3 grid-rows-2">
        {
          technologies.map((tech) => (
            <div class="flex flex-col h-fit items-center gap-1 m-5">
              <img
                src={`/svg/light/${tech}.svg`}
                alt={tech}
                title={tech.charAt(0).toUpperCase() + tech.slice(1)}
                class="h-7 w-auto object-contain transition-transform hover:scale-150 dark:hidden"
                width="30"
                height="30"
                loading="lazy"
              />
              <img
                src={`/svg/dark/${tech}.svg`}
                alt={tech}
                title={tech.charAt(0).toUpperCase() + tech.slice(1)}
                class="h-7 w-auto object-contain transition-transform hover:scale-150 hidden dark:block"
                width="30"
                height="30"
                loading="lazy"
              />
            </div>
          ))
        }
      </div>
    </Box>
  </div>
</section>
