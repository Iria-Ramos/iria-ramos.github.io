---
import Box from "./Box.astro";
import Chip from "./Chip.astro";

interface Job {
    company: string;
    date: string;
    icons: string[];
    description: string;
}

export interface Props {
    job: Job;
}

const { job } = Astro.props

---

<div class="flex flex-col w-full">
    <Box position="start" rectangle={true}>
        <div class="flex flex-col mt-5 ml-5">
            <div class="flex justify-between">
                <h1 class="text-2xl font-bold mb-2 w-fit">
                    { job.company }
                </h1>
                <time class="pr-4.5"> { job.date } </time>
            </div>
            <div class="flex flex-nowrap mb-2.5">
                {
                    job.icons.map((lan) => {
                        return <Chip icon={lan} />;
                    })
                }
            </div>
            <p class="text-base w-full">
                {job.description}
            </p>
        </div>
    </Box>
</div>
