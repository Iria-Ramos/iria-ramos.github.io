---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<section
  id="contact"
  class="w-full min-h-[550px] xl:max-h-[500px] py-12 border-t border-t-blue-50"
>
  <div class="max-w-5xl mx-auto xl:max-h-[500px]">
    <h3 class="text-4xl md:text-5xl font-medium text-[var(--white)] mb-6">
      {t("con.title")}
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <div class="text-[var(--white-icon)]">
        <p class="mb-4">
          {t("con.desc")}
        </p>
        <div class="flex items-center gap-2">
          <span>
            {t("con.loc")}
          </span>
          <span class="text-[var(--white)]">
            {t("con.loc.place")}
          </span>
        </div>
      </div>

      <div class="relative">
        <form
          id="contact-form"
          action="https://formspree.io/f/mpwjndng"
          method="POST"
          class="flex flex-col gap-4"
        >
          <input
            type="text"
            name="from_name"
            placeholder={t("con.name")}
            required
            class="px-4 py-2 bg-blue-100/35 dark:bg-blue-100/10 dark:border-[#a1bdd7] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)]"
          />
          <input
            type="email"
            name="reply_to"
            placeholder={t("con.email")}
            required
            class="px-4 py-2 bg-blue-100/35 dark:bg-blue-100/10 dark:border-[#a1bdd7] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)]"
          />
          <textarea
            name="message"
            placeholder={t("con.mess")}
            rows="6"
            required
            class="px-4 py-2 bg-blue-100/35 dark:bg-blue-100/10 dark:border-[#a1bdd7] text-[var(--white)] border border-[var(--white-icon-tr)] rounded-lg focus:outline-none focus:ring-2 focus:ring-[var(--sec)] resize-none"
          ></textarea>
          <button
            type="submit"
            class="px-4 py-2 bg-[var(--white-icon-tr)] text-[var(--white)] rounded-lg opacity-60 transition-opacity border border-[var(--white-icon-tr)] hover:opacity-100 hover:bg-blue-100
      dark:text-[var(--white-icon)] dark:hover:text-white duration-300 ease-in-out dark:border dark:border-[var(--white-icon-tr)] dark:bg-blue-100/35 dark:hover:bg-[var(--white-icon-tr)]"
          >
            {t("con.send")}
          </button>
        </form>

        <!-- Loader overlay -->
        <div
          id="form-loader"
          class="absolute inset-0 bg-blue-950/35 rounded-lg align-middle items-center justify-center hidden"
        >
          <div
            class="w-10 h-10 border-4 border-white border-t-transparent rounded-full animate-spin"
          >
          </div>
        </div>
      </div>

      <div
        id="form-message"
        class="hidden justify-center items-center mt-4 text-[var(--white)] text-lg"
      >
        {t("con.thanks")}
      </div>
    </div>
  </div>
</section>

<script type="module" is:inline>
  const form = document.getElementById("contact-form");
  const formMessage = document.getElementById("form-message");
  const loader = document.getElementById("form-loader");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    loader.classList.remove("hidden");
    loader.classList.add("flex");
    const formData = new FormData(form);

    try {
      const response = await fetch(form.action, {
        method: "POST",
        body: formData,
        headers: { Accept: "application/json" },
      });
      if (response.ok) {
        form.reset();
        form.style.display = "none";
        formMessage.classList.remove("hidden");
      } else {
        const data = await response.json();
        console.error("Error response:", data);
        alert("There was a problem sending your message.");
      }
    } catch (error) {
      console.error("Error:", error);
      alert("There was a problem sending your message.");
    } finally {
      loader.classList.remove("flex");
      loader.classList.add("hidden");
    }
  });
</script>
<style>
  #contact {
    display: flex;
    height: 60vh;
  }
</style>
